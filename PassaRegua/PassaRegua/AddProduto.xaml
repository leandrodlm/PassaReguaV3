<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassaRegua.AddProduto">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="pessoaPicker" HorizontalOptions="FillAndExpand" Title="Selecione a pessoa:">
                <Picker.Items>
                </Picker.Items>
            </Picker>

            <Entry x:Name="produto" Text="" />
            <Entry x:Name="valor" Text="" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="Adicionar" VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"  BackgroundColor="White" 
                        TextColor="DarkOliveGreen" Grid.Row="0" Grid.Column="0"
                        Clicked="btnAdicionar_clicked"/>
                <Button Text="Cancelar" VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"  BackgroundColor="White" 
                        TextColor="DarkOliveGreen" Grid.Row="0" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>