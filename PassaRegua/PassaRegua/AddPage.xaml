<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassaRegua.AddPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="nomePessoa" Text="" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="Adicionar" VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"  BackgroundColor="White" 
                        TextColor="DarkOliveGreen" Grid.Row="0" Grid.Column="0"
                        Clicked="btnAdicionar_clicked"/>
                <Button Text="Cancelar" VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"  BackgroundColor="White" 
                        TextColor="DarkOliveGreen" Grid.Row="0" Grid.Column="1"
                        Clicked="btnVoltar_clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>